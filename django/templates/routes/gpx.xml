<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<gpx xmlns="http://www.topografix.com/GPX/1/1" creator="Lonvias-Route-Maps" version="1.1">
    <metadata>
        <name>{{route.name}}</name>
        <time>{% now "c" %}</time>
        <link href="http://{{ request.META.HTTP_HOST }}{% url gpxview route.id %}">
            <text>{{ mapname }}</text>
        </link>
        <!-- copyright author="OpenStreetMap and Contributors">
          <license>http://creativecommons.org/licenses/by-sa/2.0/</license>
        </copyright -->
    </metadata>
{% for segment in geom %}
    <trk>
        <trkseg>
{% for pt in segment %}
            <trkpt lat="{{pt.1|safe}}" lon="{{pt.0|safe}}"/>{% endfor %}
        </trkseg>
    </trk>{% endfor %}
</gpx>

